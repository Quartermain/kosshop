<?xml version="1.0"?>

<config>
    <modules>
        <Kosshop_Firstconfig>
            <version>0.0.1</version>
        </Kosshop_Firstconfig>
    </modules>
    <global>
        <models>
            <firstconfig>
                <class>Kosshop_Firstconfig_Model</class>
            </firstconfig>
        </models>
		 <helpers>
            <firstconfig>
                <class>Kosshop_Firstconfig_Helper</class>
            </firstconfig>
        </helpers>
        <resources>
            <Kosshop_config_setup>
                <setup>
                    <module>Kosshop_Firstconfig</module>
                    <class>Mage_Catalog_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </Kosshop_config_setup>
        </resources>
    </global>
    <frontend>
        <routers>
            <first>
                <use>standard</use>
                <args>
                    <module>Kosshop_Firstconfig</module>
                    <frontName>first</frontName>
                </args>
            </first>
        </routers>
    </frontend>
</config>
